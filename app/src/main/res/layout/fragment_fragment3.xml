<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentThree">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="540dp">

        <LinearLayout
            android:id="@+id/product_one"
            android:layout_width="385dp"
            android:layout_height="130dp"
            android:layout_marginTop="68dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="125dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_prod1"
                    android:layout_width="263dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prod1_name"
                        android:layout_width="173dp"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:text="You have not added product"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_prod1"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:layout_weight="1"
                        android:background='@drawable/trending_background'
                        android:text="Learn more about the product" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_two"
            android:layout_width="376dp"
            android:layout_height="117dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/product_three"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_one"
            app:layout_constraintVertical_bias="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_prod2"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxWidth="250dp"
                    android:maxHeight="150dp"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="257dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prod2_name"
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="You have not added product"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_prod2"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_weight="1"
                        android:background='@drawable/trending_background'
                        android:text="Learn more about the product" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/product_three"
            android:layout_width="386dp"
            android:layout_height="131dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_two">

            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="150dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_prod3"
                    android:layout_width="263dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp"
                    android:layout_weight="1"
                    android:backgroundTint="#239F5F"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prod3_name"
                        android:layout_width="167dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:text="You have not added product"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_prod3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background='@drawable/trending_background'
                        android:text="Learn more about the product" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="378dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:text="3 Products you throw out frequently:"
            android:textAlignment="gravity"
            android:textColor="#72A854"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/product_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.484"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>